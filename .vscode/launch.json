{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Bazel C++ launch",
      "type": "lldb",
      "request": "launch",
      "sourceMap": {
        ".": "${workspaceFolder}"
      },
      "stopOnEntry": false,
      "program": "${workspaceFolder}/bazel-bin/${input:pickBazelCCTargets}",
      "args": [],
      "env": {},
      "cwd": "${workspaceFolder}"
    },
    {
      "name": "Debug Python",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/.vscode/.debug/pydev.py",
      "console": "integratedTerminal",
      "args": ["--file", "${file}"],
      "env": {
        "PYTHONPATH": "${workspaceFolder}:${workspaceFolder}/.vscode/.debug"
      },
      "autoReload": {
        "enable": true
      },
      "windows": {
        "env": {
          "PYTHONPATH": "${workspaceFolder};${workspaceFolder}/.vscode/.debug"
        }
      }
    },
    {
      "name": "Attach C++ w/ Python",
      "type": "lldb",
      "request": "attach",
      "program": "${workspaceFolder}/.venv/bin/python",
      "sourceMap": {
        ".": "${workspaceFolder}"
      },
      "linux": {
        "sourceMap": {
          "/proc/self/cwd": "${workspaceFolder}"
        }
      },
      "pid": "${command:pickProcess}"
    }
  ],
  "inputs": [
    {
      "id": "pickBazelCCTargets",
      "type": "pickString",
      "description": "Select a Bazel C++ target to launch",
      "options": [
        "projects/cxx/calculator/calculator",
        "projects/cxx/sayhi/sayhi"
      ]
    }
  ]
}
