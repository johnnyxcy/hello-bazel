{
  "[python]": {
    "editor.rulers": [80]
  },
  "[typescript]": {
    "editor.rulers": [80]
  },
  "[typescriptreact]": {
    "editor.rulers": [80]
  },
  "bazel.lsp.enabled": true,
  // Disable the following to not use debug configs
  "bazel.commandLine.commandArgs": ["--config", "debug"],
  "clangd.arguments": [
    "--query-driver=**",
    // 支持读取 .clangd 文件
    "--enable-config",
    // clang-tidy
    "--clang-tidy",
    // 同时开启的任务数量
    "-j=12",
    // 在后台自动分析文件（基于complie_commands)
    "--background-index",
    // 生成至根节点的 .clangd 目录
    "--compile-commands-dir=${workspaceFolder}",
    // 不要默认自动导入头文件
    "--header-insertion=never",
    // Prepend a circular dot or space before the completion label
    "--header-insertion-decorators",
    // 更详细的补全内容
    "--completion-style=detailed"
  ],
  "files.exclude": {
    "**/.DS_Store": true,
    "**/.git": true,
    "**/.hg": true,
    "**/.svn": true,
    "**/CVS": true,
    "**/Thumbs.db": true,
    // exclude bazel build directory except bin
    // "bazel-[^b]*": true,
    // "bazel-b[^i]*": true,
    // "bazel-bi[^n]*": true,
    // "external": true,
    // exclude python venv
    // ".venv": true,
    // exclude clangd cache
    ".cache": true
  },
  "lldb.verboseLogging": true,
  "ruff.lint.enable": true,
  "ruff.organizeImports": true,
  "ruff.path": ["external/pypi_ruff/bin/ruff", "ruff"],
  "ruff.trace.server": "verbose",
  "testMate.cpp.debug.configTemplate": {
    "args": "${argsArray}",
    "cwd": "${cwd}",
    "env": "${envObj}",
    "initCommands": [],
    "program": "${exec}",
    "request": "launch",
    "sourceMap": {
      ".": "${workspaceFolder}"
    },
    "terminal": "integrated",
    "type": "lldb"
  },
  "testMate.cpp.log.logpanel": true,
  "testMate.cpp.test.advancedExecutables": [
    {
      "cwd": "${workspaceFolder}",
      "description": "Bazel C++ Test Targets",
      "pattern": "bazel-bin/**/_main/projects/cxx/**/*test*",
      "runTask": {
        "before": ["[Bazel]build:debug"]
      }
    }
  ]
}
